{"sections":[],"schemaVersion":{"patch":0,"minor":3,"major":0},"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/Actions"},"kind":"article","metadata":{"modules":[{"name":"OUDSComponents"}],"roleHeading":"Article","role":"article","title":"Actions"},"abstract":[{"type":"text","text":"Some components can be used for "},{"type":"strong","inlineContent":[{"type":"text","text":"actions"}]},{"type":"text","text":"."}],"primaryContentSections":[{"kind":"content","content":[{"type":"heading","anchor":"Overview","level":2,"text":"Overview"},{"type":"heading","anchor":"Buttons","level":3,"text":"Buttons"},{"type":"paragraph","inlineContent":[{"identifier":"component_button_enabled_strong_Orange","type":"image"}]},{"type":"paragraph","inlineContent":[{"text":"The ","type":"text"},{"identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton","type":"reference","isActive":true},{"text":" proposes layout with text only, icon only or text and icon.","type":"text"},{"text":" ","type":"text"},{"text":"Four hierarchies are proposed for all layouts: ","type":"text"},{"inlineContent":[{"type":"text","text":"default"}],"type":"emphasis"},{"text":", ","type":"text"},{"inlineContent":[{"text":"strong","type":"text"}],"type":"emphasis"},{"text":", ","type":"text"},{"inlineContent":[{"text":"minimal","type":"text"}],"type":"emphasis"},{"text":" and ","type":"text"},{"inlineContent":[{"type":"text","text":"negative"}],"type":"emphasis"},{"text":".","type":"text"},{"text":" ","type":"text"},{"text":"Two style are available: ","type":"text"},{"inlineContent":[{"type":"text","text":"default"}],"type":"emphasis"},{"text":" and ","type":"text"},{"inlineContent":[{"type":"text","text":"loading"}],"type":"emphasis"},{"text":".","type":"text"},{"text":" ","type":"text"},{"text":"If button is placed on colored surface using ","type":"text"},{"code":"OUDSColoredSurface","type":"codeVoice"},{"text":", the default colors (content, background and border) are automatically adjusted to switch to monochrom.","type":"text"},{"text":" ","type":"text"},{"text":"A button with ","type":"text"},{"code":"OUDSButton.Hierarchy.Negative","type":"codeVoice"},{"text":" hierarchy is not allowed as a direct or indirect child of an ","type":"text"},{"code":"OUDSColoredSurface","type":"codeVoice"},{"text":".","type":"text"}]},{"type":"codeListing","code":["     \/\/ Icon only with default hierarchy","     OUDSButton(icon: Image(\"ic_heart\"), hierarchy: .default) {}","","     \/\/ Text only with negative hierarchy","     OUDSButton(text: \"Delete\", hierarchy: .negative) {}"],"syntax":"swift"},{"type":"paragraph","inlineContent":[{"type":"text","text":"For accessibility reasons, if the user in the system settings toggles the option to reduce the animations, the loading indicator will be frozen to be more comfortable for the user."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"For ecodesign reasons, if the user toggles the low power mode, the loading indicator will be frozen to prevent the CPU to work and waste energy."}]}]}],"hierarchy":{"paths":[["doc:\/\/OUDSComponents\/documentation\/OUDSComponents"]]},"variants":[{"paths":["\/documentation\/oudscomponents\/actions"],"traits":[{"interfaceLanguage":"swift"}]}],"references":{"component_button_enabled_strong_Orange":{"identifier":"component_button_enabled_strong_Orange","alt":"A button component in light and dark mode with Orange theme","variants":[{"traits":["1x","light"],"url":"\/images\/OUDSComponents\/component_button_enabled_strong_Orange.png"}],"type":"image"},"doc://OUDSComponents/documentation/OUDSComponents":{"role":"collection","url":"\/documentation\/oudscomponents","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents","abstract":[{"text":"The catalog of all components provided by OUDS. It contains also ","type":"text"},{"type":"codeVoice","code":"View"},{"text":" extensions and ","type":"text"},{"type":"codeVoice","c