{"hierarchy":{"paths":[["doc:\/\/OUDSComponents\/documentation\/OUDSComponents"]]},"variants":[{"paths":["\/documentation\/oudscomponents\/actions"],"traits":[{"interfaceLanguage":"swift"}]}],"sections":[],"schemaVersion":{"patch":0,"major":0,"minor":3},"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/Actions"},"primaryContentSections":[{"content":[{"type":"heading","text":"Overview","level":2,"anchor":"Overview"},{"type":"heading","text":"Buttons","level":3,"anchor":"Buttons"},{"inlineContent":[{"type":"text","text":"The "},{"type":"reference","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton","isActive":true},{"type":"text","text":" propose layout with text only, icon only or text and icon."},{"type":"text","text":" "},{"type":"text","text":"Four hierarchies are proposed for all layouts: "},{"type":"emphasis","inlineContent":[{"type":"text","text":"default"}]},{"type":"text","text":", "},{"type":"emphasis","inlineContent":[{"text":"strong","type":"text"}]},{"type":"text","text":", "},{"type":"emphasis","inlineContent":[{"type":"text","text":"minimal"}]},{"type":"text","text":" and "},{"type":"emphasis","inlineContent":[{"type":"text","text":"negative"}]},{"type":"text","text":"."},{"type":"text","text":" "},{"type":"text","text":"Two style are available: "},{"type":"emphasis","inlineContent":[{"text":"default","type":"text"}]},{"type":"text","text":" and "},{"type":"emphasis","inlineContent":[{"type":"text","text":"loading"}]},{"type":"text","text":"."},{"type":"text","text":" "},{"type":"text","text":"If button is placed on colored surface using "},{"type":"codeVoice","code":"OUDSColoredSurface"},{"type":"text","text":", the default colors (content, background and border) are automatically adjusted to switch to monochrom."},{"type":"text","text":" "},{"type":"text","text":"A button with "},{"type":"codeVoice","code":"OUDSButton.Hierarchy.Negative"},{"type":"text","text":" hierarchy is not allowed as a direct or indirect child of an "},{"type":"codeVoice","code":"OUDSColoredSurface"},{"type":"text","text":"."}],"type":"paragraph"},{"type":"codeListing","syntax":"swift","code":["     \/\/ Icon only with default hierarchy","     OUDSButton(icon: Image(\"ic_heart\"), hierarchy: .default) {}","","     \/\/ Text only with negative hierarchy","     OUDSButton(text: \"Delete\", hierarchy: .negative) {}"]},{"inlineContent":[{"text":"For accessibility reasons, if the user in the system settings toggles the option to reduce the animations, the loading indicator will be frozen to be more comfortable for the user.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"For ecodesign reasons, if the user toggles the low power mode, the loading indicator will be frozen to prevent the CPU to work and waste energy.","type":"text"}],"type":"paragraph"}],"kind":"content"}],"kind":"article","abstract":[{"type":"text","text":"Some components can be used for "},{"inlineContent":[{"type":"text","text":"actions"}],"type":"strong"},{"type":"text","text":"."}],"metadata":{"modules":[{"name":"OUDSComponents"}],"roleHeading":"Article","title":"Actions","role":"article"},"references":{"doc://OUDSComponents/documentation/OUDSComponents":{"abstract":[{"type":"text","text":"The catalog of all components provided by OUDS. It contains also "},{"code":"View","type":"codeVoice"},{"type":"text","text":" extensions and "},{"code":"ViewModifiers","type":"codeVoice"},{"type":"text","text":" to apply tokens and styles on components and higher-level views."}],"url":"\/documentation\/oudscomponents","type":"topic","title":"OUDSComponents","kind":"symbol","role":"collection","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents"},"doc://OUDSComponents/documentation/OUDSComponents/OUDSButton":{"fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"OUDSButton","kind":"identifier"}],"abstract":[{"type":"text","text":"The "},{"type":"ref