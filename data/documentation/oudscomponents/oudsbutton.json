{"schemaVersion":{"major":0,"minor":3,"patch":0},"sections":[],"hierarchy":{"paths":[["doc:\/\/OUDSComponents\/documentation\/OUDSComponents"]]},"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton"},"topicSections":[{"title":"Initializers","identifiers":["doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton\/init(icon:accessibilityLabel:hierarchy:style:action:)","doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton\/init(icon:text:hierarchy:style:action:)","doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton\/init(text:hierarchy:style:action:)"],"generated":true,"anchor":"Initializers"},{"title":"Instance Properties","identifiers":["doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton\/body"],"generated":true,"anchor":"Instance-Properties"},{"title":"Enumerations","identifiers":["doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton\/Hierarchy","doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton\/Style"],"generated":true,"anchor":"Enumerations"},{"title":"Default Implementations","identifiers":["doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton\/View-Implementations","doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton\/View-Implementations"],"generated":true,"anchor":"Default-Implementations"}],"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/oudscomponents\/oudsbutton"]}],"abstract":[{"type":"text","text":"The "},{"type":"reference","isActive":true,"identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton"},{"type":"text","text":" proposes layout with text only, icon only or text with icon."}],"relationshipsSections":[{"type":"conformsTo","kind":"relationships","title":"Conforms To","identifiers":["doc:\/\/OUDSComponents\/s8SendableP","doc:\/\/OUDSComponents\/7SwiftUI4ViewP"]}],"kind":"symbol","metadata":{"roleHeading":"Structure","externalID":"s:14OUDSComponents10OUDSButtonV","title":"OUDSButton","modules":[{"name":"OUDSComponents"}],"role":"symbol","symbolKind":"struct","navigatorTitle":[{"kind":"identifier","text":"OUDSButton"}],"fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"OUDSButton","kind":"identifier"}]},"primaryContentSections":[{"kind":"declarations","declarations":[{"languages":["swift"],"tokens":[{"text":"@","kind":"attribute"},{"preciseIdentifier":"s:ScM","text":"MainActor","kind":"attribute"},{"text":" ","kind":"text"},{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"OUDSButton","kind":"identifier"}],"platforms":["macOS"]}]},{"kind":"content","content":[{"text":"Hierarchies","level":2,"anchor":"Hierarchies","type":"heading"},{"inlineContent":[{"type":"text","text":"Five hierarchies are proposed for all layouts:"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"type":"text","text":"default (by default)"}],"type":"strong"},{"text":": Default buttons are used for actions which are not mandatory or essential for the user.","type":"text"}]}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"strong"}]},{"type":"text","text":": Should be singular and prominent, limited to one per view."},{"type":"text","text":" "},{"type":"text","text":"It should be reserved for the most critical action, such as “Next,” “Save,” “Submit,” etc. It is a “call for action”."}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"text":"brand","type":"text"}]},{"type":"text","text":": A brand primary color alternative to the "},{"type":"emphasis","inlineContent":[{"text":"strong","type":"text"}]},{"type":"text","text":" button."},{"type":"text","text":" "},{"type":"text","text":"To be used sparingly for high-value specific actions or to visually anchor a brand moment. Do not use it as the default primary button in your interfaces."},{"type":"text","text":" "},{"type":"text","text":"A button with "},{"type":"codeVoice","code":"OUDSButton.Hierarchy.Brand"},{"type":"text","text":" hierarchy is not allowed as a direct or indirect child of an "},{"type":"codeVoice","code":"OUDSColoredSurface"},{"type":"text","text":"."}]}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"minimal"}],"type":"strong"},{"type":"text","text":": Minimal buttons are commonly used for actions that are considered less crucial. They can be used independently or together with a strong button."}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"negative"}]},{"type":"text","text":": Negative buttons should be used sparingly to warn of a destructive action,"},{"type":"text","text":" "},{"type":"text","text":"for example, delete or remove, typically resulting in the opening of a confirmation dialog."},{"type":"text","text":" "},{"type":"text","text":"A button with "},{"type":"codeVoice","code":"OUDSButton.Hierarchy.Negative"},{"type":"text","text":" hierarchy is not allowed as a direct or indirect child of an "},{"type":"codeVoice","code":"OUDSColoredSurface"},{"type":"text","text":"."}]}]}],"type":"unorderedList"},{"text":"Code samples","level":2,"anchor":"Code-samples","type":"heading"},{"syntax":"swift","code":["    \/\/ Icon only with default hierarchy","    OUDSButton(icon: Image(\"ic_heart\"), hierarchy: .default) { \/* the action to process *\/ }","    \/\/ Or simpler","    OUDSButton(icon: Image(\"ic_heart\")) { \/* the action to process *\/ }","","    \/\/ Text only with negative hierarchy","    OUDSButton(text: \"Delete\", hierarchy: .negative,  style: .default) { \/* the action to process *\/ }","    \/\/ Or simpler","    OUDSButton(text: \"Delete\", hierarchy: .negative) { \/* the action to process *\/ }","","    \/\/ A loading button","    OUDSButton(text: \"Delete\", style: .loading) { \/* the action to process *\/ }","","    \/\/ Text and icon with strong hierarchy","    OUDSButton(icon: Image(\"ic_heart\"), text: \"Validate\", hierarchy: .strong) { \/* the action to process *\/ }"],"type":"codeListing"},{"text":"Styles","level":2,"anchor":"Styles","type":"heading"},{"inlineContent":[{"type":"text","text":"Two style are available:"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"default (by default)"}]},{"type":"text","text":": used in the normal usage of button. The aspect of the button changes for  states "},{"type":"emphasis","inlineContent":[{"type":"text","text":"disabled"}]},{"type":"text","text":", "},{"type":"emphasis","inlineContent":[{"type":"text","text":"pressed"}]},{"type":"text","text":", "},{"type":"emphasis","inlineContent":[{"text":"hovered","type":"text"}]},{"type":"text","text":" or normal (i.e. "},{"type":"emphasis","inlineContent":[{"type":"text","text":"enabled"}]},{"type":"text","text":")"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"loading"}],"type":"strong"},{"text":": used after button was clicked and probably data are requested before navigate to a next screen or get updated data.","type":"text"}],"type":"paragraph"}]}],"type":"unorderedList"},{"text":"Rounded layout","level":2,"anchor":"Rounded-layout","type":"heading"},{"inlineContent":[{"text":"Buttons can have rounded layouts to be favored in more emotional, immersive contexts or those tied to specific visual identities.","type":"text"},{"text":" ","type":"text"},{"text":"For standard or business-oriented journeys, keep the default corners.","type":"text"},{"text":" ","type":"text"},{"text":"This evolution addresses the need for flexibility in adapting the design to some brand contexts.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"To activate the rounded button behavior, set to true the  ","type":"text"},{"code":"oudsRoundedButton","type":"codeVoice"},{"text":" environment variable","type":"text"},{"text":" ","type":"text"},{"text":"at the root level of the view hierarchy (i.e. can be applied on the ","type":"text"},{"code":"OUDSThemeableView","type":"codeVoice"},{"text":"),","type":"text"},{"text":" ","type":"text"},{"text":"to be sure all buttons in the application are rounded.","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["    \/\/ Add themeable view to your app root view to use the OrangeTheme","    OUDSThemeableView(theme: OrangeTheme()) {","        YourRootView() \/\/ With some views with Buttons","    }","    .environment(\\.oudsRoundedButton, true)"],"type":"codeListing"},{"text":"Colored surface","level":2,"anchor":"Colored-surface","type":"heading"},{"inlineContent":[{"type":"text","text":"If button is placed on colored surface using "},{"code":"OUDSColoredSurface","type":"codeVoice"},{"type":"text","text":", the default colors (content, background and border) are automatically adjusted to switch to monochrome mode."}],"type":"paragraph"},{"inlineContent":[{"inlineContent":[{"text":"Remark: Today it is not allowed to place a Negative nor a Brand button on a colored surface.","type":"text"}],"type":"strong"}],"type":"paragraph"},{"text":"Specific behavior","level":2,"anchor":"Specific-behavior","type":"heading"},{"inlineContent":[{"type":"text","text":"For accessibility reasons, if the system settings for reducing motion is enabled, the loading indicator does not move."},{"type":"text","text":" "},{"type":"text","text":"For ecodesign reasons, if the device is in low power mode, the loading indicator does not move."}],"type":"paragraph"},{"text":"Design documentation","level":2,"anchor":"Design-documentation","type":"heading"},{"inlineContent":[{"identifier":"https:\/\/unified-design-system.orange.com\/472794e18\/p\/48a788-button","type":"reference","isActive":true}],"type":"paragraph"},{"text":"Themes rendering","level":2,"anchor":"Themes-rendering","type":"heading"},{"text":"Orange","level":3,"anchor":"Orange","type":"heading"},{"inlineContent":[{"type":"image","identifier":"component_button_enabled_strong_Orange"}],"type":"paragraph"},{"text":"Orange Business Tools","level":3,"anchor":"Orange-Business-Tools","type":"heading"},{"inlineContent":[{"identifier":"component_button_enabled_strong_OrangeBusinessTools","type":"image"}],"type":"paragraph"},{"text":"Orange Inverse","level":3,"anchor":"Orange-Inverse","type":"heading"},{"inlineContent":[{"identifier":"component_button_enabled_strong_OrangeInverse","type":"image"}],"type":"paragraph"},{"text":"Sosh","level":3,"anchor":"Sosh","type":"heading"},{"inlineContent":[{"type":"image","identifier":"component_button_enabled_strong_Sosh"}],"type":"paragraph"},{"text":"Wireframe","level":3,"anchor":"Wireframe","type":"heading"},{"inlineContent":[{"type":"image","identifier":"component_button_enabled_strong_Wireframe"}],"type":"paragraph"},{"content":[{"inlineContent":[{"type":"text","text":"3.0.0 (Figma component design version)"}],"type":"paragraph"}],"name":"Version","type":"aside","style":"note"},{"content":[{"inlineContent":[{"type":"text","text":"0.10.0"}],"type":"paragraph"}],"name":"Since","type":"aside","style":"note"}]}],"references":{"component_button_enabled_strong_Sosh":{"alt":"A button component in light and dark mode with Sosh theme","identifier":"component_button_enabled_strong_Sosh","variants":[{"traits":["1x","light"],"url":"\/images\/OUDSComponents\/component_button_enabled_strong_Sosh.png"}],"type":"image"},"ic_folder_categories.png":{"variants":[{"url":"\/images\/OUDSComponents\/ic_folder_categories.png","traits":["1x","light"]}],"type":"image","identifier":"ic_folder_categories.png","alt":null},"doc://OUDSComponents/s8SendableP":{"identifier":"doc:\/\/OUDSComponents\/s8SendableP","title":"Swift.Sendable","type":"unresolvable"},"doc://OUDSComponents/documentation/OUDSComponents/OUDSButton/init(icon:accessibilityLabel:hierarchy:style:action:)":{"type":"topic","fragments":[{"te