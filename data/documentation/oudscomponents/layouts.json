],"fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"OUDSButton"}],"role":"symbol","type":"topic","abstract":[{"type":"text","text":"The "},{"type":"reference","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSButton","isActive":true},{"type":"text","text":" proposes layout with text only, icon only or text with icon."}]},"doc://OUDSComponents/documentation/OUDSComponents":{"abstract":[{"type":"text","text":"The catalog of all components provided by OUDS. It contains also "},{"code":"View","type":"codeVoice"},{"type":"text","text":" extensions and "},{"code":"ViewModifiers","type":"codeVoice"},{"type":"text","text":" to apply tokens and styles on components and higher-level views."}],"type":"topic","role":"collection","url":"\/documentation\/oudscomponents","kind":"symbol","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents","title":"OUDSComponents"},"doc://OUDSComponents/documentation/OUDSComponents/OUDSColoredSurface":{"url":"\/documentation\/oudscomponents\/oudscoloredsurface","role":"symbol","title":"OUDSColoredSurface","type":"topic","abstract":[{"type":"text","text":"Used to define if a content is used on a colored surface."}],"navigatorTitle":[{"text":"OUDSColoredSurface","kind":"identifier"}],"fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"OUDSColoredSurface","kind":"identifier"}],"kind":"symbol","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSColoredSurface"}}}