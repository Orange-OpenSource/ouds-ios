{"identifier":{"url":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitchItem","interfaceLanguage":"swift"},"sections":[],"variants":[{"paths":["\/documentation\/oudscomponents\/oudsswitchitem"],"traits":[{"interfaceLanguage":"swift"}]}],"hierarchy":{"paths":[["doc:\/\/OUDSComponents\/documentation\/OUDSComponents"]]},"relationshipsSections":[{"type":"conformsTo","title":"Conforms To","kind":"relationships","identifiers":["doc:\/\/OUDSComponents\/s8SendableP","doc:\/\/OUDSComponents\/7SwiftUI4ViewP"]}],"kind":"symbol","schemaVersion":{"major":0,"minor":3,"patch":0},"topicSections":[{"title":"Initializers","identifiers":["doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitchItem\/init(_:isOn:helper:icon:flipIcon:isReversed:isError:isReadOnly:hasDivider:)"],"generated":true,"anchor":"Initializers"},{"title":"Instance Properties","identifiers":["doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitchItem\/body"],"generated":true,"anchor":"Instance-Properties"},{"title":"Default Implementations","identifiers":["doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitchItem\/View-Implementations","doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitchItem\/View-Implementations"],"generated":true,"anchor":"Default-Implementations"}],"abstract":[{"type":"text","text":"The "},{"isActive":true,"type":"reference","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitchItem"},{"type":"text","text":" proposes layouts to add in your views some swith components."},{"type":"text","text":" "},{"type":"text","text":"If you want to use a switch with only an indicator, prefer instead "},{"isActive":true,"type":"reference","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitch"},{"type":"text","text":"."}],"primaryContentSections":[{"kind":"declarations","declarations":[{"languages":["swift"],"tokens":[{"text":"@","kind":"attribute"},{"preciseIdentifier":"s:ScM","text":"MainActor","kind":"attribute"},{"text":" ","kind":"text"},{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"OUDSSwitchItem","kind":"identifier"}],"platforms":["macOS"]}]},{"content":[{"level":2,"text":"Layouts","anchor":"Layouts","type":"heading"},{"inlineContent":[{"text":"The component can be rendered as two different layouts:","type":"text"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"default"}]},{"type":"text","text":": the component has a leading indicator, a label and optional helper texts, and an optional trailing decorative icon"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"inverse"}]},{"type":"text","text":": like the "},{"type":"emphasis","inlineContent":[{"text":"default","type":"text"}]},{"type":"text","text":" layout but with a trailing switch indicator and a leading optional decorative icon"}],"type":"paragraph"}]}]},{"level":2,"text":"Indicator states","anchor":"Indicator-states","type":"heading"},{"inlineContent":[{"type":"text","text":"The switch indicator has two available states set as a boolean property that determines whether the toggle is on or off."}],"type":"paragraph"},{"level":2,"text":"Particular cases","anchor":"Particular-cases","type":"heading"},{"inlineContent":[{"text":"An ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitchItem"},{"text":" can be related to an error situation, for example troubles for a formular.","type":"text"},{"text":" ","type":"text"},{"text":"A dedicated look and feel is implemented for that if the ","type":"text"},{"type":"codeVoice","code":"isError"},{"text":" flag is risen.","type":"text"},{"text":" ","type":"text"},{"text":"In addition, the ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitchItem"},{"text":" can be in read only mode, i.e. the user cannot interact with the component yet but this component must not be considered","type":"text"},{"text":" ","type":"text"},{"text":"as disabled.","type":"text"},{"text":" ","type":"text"},{"text":"The switch can be also outlined in some cases.","type":"text"}],"type":"paragraph"},{"level":2,"text":"Accessibility considerations","anchor":"Accessibility-considerations","type":"heading"},{"inlineContent":[{"inlineContent":[{"type":"text","text":"Voice Over"}],"type":"emphasis"},{"text":" will use several elements to describe the component: if component disabled \/ read only, if error context, the label and helper texts and a custom switch trait.","type":"text"}],"type":"paragraph"},{"level":2,"text":"Forbidden by design","anchor":"Forbidden-by-design","type":"heading"},{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"The design system does not allow to have both an error situation and a read only component."}]},{"type":"text","text":" "},{"inlineContent":[{"type":"text","text":"The design system does not allow to have both an error situation and a disabled component."}],"type":"strong"},{"type":"text","text":" "},{"inlineContent":[{"type":"text","text":"The design system does not allow to have both a read only and a disabled component."}],"type":"strong"}],"type":"paragraph"},{"text":"Code samples","level":2,"anchor":"Code-samples","type":"heading"},{"type":"codeListing","syntax":"swift","code":["    \/\/ Supposing we have an unselected state","    @Published var isOn: Bool = false","","    \/\/ A leading switch with a label.","    \/\/ The default layout will be used here.","    OUDSSwitchItem(\"Lucy in the Sky with Diamonds\", isOn: $isOn)","","    \/\/ A leading switch with a label, but in read only mode (user cannot interact yet, but not disabled).","    \/\/ The default layout will be used here.","    OUDSSwitchItem(\"Lucy in the Sky with Diamonds\", isOn: $isOn, isReadOnly: true)","","    \/\/ A leading switch with a label, and an helper text.","    \/\/ The default layout will be used here.","    OUDSSwitchItem(\"Lucy in the Sky with Diamonds\", isOn: $isOn, helper: \"The Beatles\")","","    \/\/ A leading switch with an additional label.","    \/\/ The default layout will be used here.","    OUDSSwitchItem(\"Lucy in the Sky with Diamonds\", isOn: $isOn, additionalLabel: \"The Beatles\", helper: \"1967\")","","    \/\/ A trailing switch with a label, an additonal label, an helper text and an icon.","    \/\/ The inverse layout will be used here.","    OUDSSwitchItem(\"Lucy in the Sky with Diamonds\",","                   isOn: $isOn,","                   additionalLabel: \"The Beatles\",","                   helper: \"1967\",","                   isReversed: true,","                   icon: Image(decorative: \"ic_heart\"))","","    \/\/ A trailing switch with a label, an helper text, an icon, a divider and is about an error.","    \/\/ The inverse layout will be used here.","    OUDSSwitchItem(\"Rescue from this world!\",","                   isOn: $isOn,","                   helper: \"Put your hand in mine\",","                   icon: Image(decorative: \"ic_heart\"),","                   isReversed: true,","                   isError: true,","                   hasDivider: true)","","    \/\/ A leading switch with a label, but disabled.","    \/\/ The default layout will be used here.","    OUDSSwitchItem(\"Rescue from this world!\", isOn: $isOn)","        .disabled(true)","","    \/\/ Never disable a read only or an error-related switch as it will crash","    \/\/ This is forbidden by design!","    OUDSSwitchItem(\"Kaboom!\", isOn: $isOn, isError: true).disabled(true) \/\/ fatal error","    OUDSSwitchItem(\"Kaboom!\", isOn: $isOn, isReadyOnly: true).disabled(true) \/\/ fatal error"]},{"text":"Design documentation","level":2,"anchor":"Design-documentation","type":"heading"},{"type":"paragraph","inlineContent":[{"type":"reference","identifier":"https:\/\/unified-design-system.orange.com\/472794e18\/p\/18acc0-switch","isActive":true}]},{"content":[{"inlineContent":[{"type":"text","text":"1.1.0 (Figma component design version)"}],"type":"paragraph"}],"style":"note","type":"aside","name":"Version"},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"0.14.0"}]}],"style":"note","type":"aside","name":"Since"}],"kind":"content"}],"metadata":{"modules":[{"name":"OUDSComponents"}],"symbolKind":"struct","role":"symbol","title":"OUDSSwitchItem","fragments":[{"text":"struct","kind":"keyword"},{"text":" ","kind":"text"},{"text":"OUDSSwitchItem","kind":"identifier"}],"roleHeading":"Structure","navigatorTitle":[{"text":"OUDSSwitchItem","kind":"identifier"}],"externalID":"s:14OUDSComponents14OUDSSwitchItemV"},"references":{"doc://OUDSComponents/s8SendableP":{"type":"unresolvable","title":"Swift.Sendable","identifier":"doc:\/\/OUDSComponents\/s8SendableP"},"https://unified-design-system.orange.com/472794e18/p/18acc0-switch":{"type":"link","title":"unified-design-system.orange.com","titleInlineContent":[{"type":"text","text":"unified-design-system.orange.com"}],"identifier":"https:\/\/unified-design-system.orange.com\/472794e18\/p\/18acc0-switch","url":"https:\/\/unified-design-system.orange.com\/472794e18\/p\/18acc0-switch"},"doc://OUDSComponents/documentation/OUDSComponents/OUDSSwitch":{"role":"symbol","url":"\/documentation\/oudscomponents\/oudsswitch","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"OUDSSwitch"}],"kind":"symbol","title":"OUDSSwitch","identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitch","type":"topic","navigatorTitle":[{"kind":"identifier","text":"OUDSSwitch"}],"abstract":[{"text":"The ","type":"text"},{"identifier":"doc:\/\/OUDSComponents\/documentation\/OUDSComponents\/OUDSSwitch","type":"reference","isActive":true},{"text":" proposes layout to add in your views a lonely switch, without la